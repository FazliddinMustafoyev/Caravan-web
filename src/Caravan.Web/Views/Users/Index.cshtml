@using Caravan.Service.ViewModels;
@model UserViewModel

<div class="my-10 mx-10 me-10 d-flex flex-column">
    <div class="d-flex justify-content-start align-items-center">
        <div class="" style="margin-left: 100px; margin-right: 100px">
            @if (Model.ImagePath is null)
            {
                <img class="h-200px w-200px mb-3 card-rounded shadow1" src="~/media/avatars/profile.png" />
            }
            else
            {
                <img class="h-300px w-300px mb-3 card-rounded shadow1" src="~/@Model.ImagePath" />
            }
        </div>

        <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">

            <div class="d-flex flex-wrap flex-stack">
                <div class="card-body p-1 d-flex align-items-start flex-column">
                    <div class="d-flex justify-content-end  align-items-center mb-5">
                        <div class="d-flex align-items-center">
                            <a asp-asp-controller="users" asp-action="get" asp-route-userId="@Model.Id" class="text-gray-800 text-hover-primary fs-2 fw-bolder me-1">@Model.FirstName @Model.LastName</a>
                            <a style="margin-right: 100px">
                                <span class="svg-icon svg-icon-1 svg-icon-primary">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                        <path d="M10.0813 3.7242C10.8849 2.16438 13.1151 2.16438 13.9187 3.7242V3.7242C14.4016 4.66147 15.4909 5.1127 16.4951 4.79139V4.79139C18.1663 4.25668 19.7433 5.83365 19.2086 7.50485V7.50485C18.8873 8.50905 19.3385 9.59842 20.2758 10.0813V10.0813C21.8356 10.8849 21.8356 13.1151 20.2758 13.9187V13.9187C19.3385 14.4016 18.8873 15.491 19.2086 16.4951V16.4951C19.7433 18.1663 18.1663 19.7433 16.4951 19.2086V19.2086C15.491 18.8873 14.4016 19.3385 13.9187 20.2758V20.2758C13.1151 21.8356 10.8849 21.8356 10.0813 20.2758V20.2758C9.59842 19.3385 8.50905 18.8873 7.50485 19.2086V19.2086C5.83365 19.7433 4.25668 18.1663 4.79139 16.4951V16.4951C5.1127 15.491 4.66147 14.4016 3.7242 13.9187V13.9187C2.16438 13.1151 2.16438 10.8849 3.7242 10.0813V10.0813C4.66147 9.59842 5.1127 8.50905 4.79139 7.50485V7.50485C4.25668 5.83365 5.83365 4.25668 7.50485 4.79139V4.79139C8.50905 5.1127 9.59842 4.66147 10.0813 3.7242V3.7242Z" fill="#00A3FF"></path>
                                        <path class="permanent" d="M14.8563 9.1903C15.0606 8.94984 15.3771 8.9385 15.6175 9.14289C15.858 9.34728 15.8229 9.66433 15.6185 9.9048L11.863 14.6558C11.6554 14.9001 11.2876 14.9258 11.048 14.7128L8.47656 12.4271C8.24068 12.2174 8.21944 11.8563 8.42911 11.6204C8.63877 11.3845 8.99996 11.3633 9.23583 11.5729L11.3706 13.4705L14.8563 9.1903Z" fill="white"></path>
                                    </svg>
                                </span>
                            </a>
                        </div>

                        <div class="d-flex ms-4 my-2">
                            <a asp-controller="home" asp-action="index" class="btn btn-light me-3" id="kt_user_follow_button">
                                Close
                            </a>
                            <a asp-controller="users" asp-action="update" class="btn btn-primary me-3" data-kt-drawer-show="true" data-kt-drawer-target="#kt_drawer_chat">Edit Profile</a>
                        </div>
                    </div>
                    <div class="row mb-7" style="gap: 217px;">
                           <span class="fw-bold text-muted" style="width: 87px">First Name</span>
                        <span class="fw-bolder fs-6 text-dark" style="width: fit-content">@Model.FirstName</span>
                    </div>
                    <div class="row mb-7" style="gap: 217px;">
                        <span class="col-lg-4 fw-bold text-muted" style="width: 87px">Last Name</span>
                        <span class="fw-bolder fs-6 text-dark" style="width: fit-content">@Model.LastName</span>
                    </div>
                    <div class="row mb-7" style="gap: 217px;">
                        <sapn class="col-lg-4 fw-bold text-muted" style="width: 87px">Address</sapn>
                        <span class="fw-bolder fs-6 text-dark" style="width: fit-content">@Model.Address</span>
                    </div>
                    <div class="row mb-7" style="gap: 217px;">
                        <span class="fw-bold text-muted" style="width: 87px; white-space: nowrap">Phone Number</span>
                        <span class="fw-bolder fs-6 text-dark" style="width: fit-content">@Model.PhoneNumber</span>
                    </div>
                    <div class="row mb-7" style="gap: 217px ;">
                        <span class="col-lg-4 fw-bold text-muted" style="width: 87px">Email</span>
                        <span class="fw-bolder fs-6 text-dark" style="width: fit-content">@Model.Email</span>
                    </div>
                </div>
            </div>
        </div>
  </div>
</div>
