@using Caravan.Service.ViewModels;
@model UserViewModel

<div class="card w-500px h-630px mt-10 mb-15" style="margin-left:auto; margin-right:auto;">
    <div class="py-10 pe-10 px-10">
        <form asp-controller="users" asp-action="get" asp-route-userId="@ViewBag.userId" method="get">
            <label class="form-label fs-2 text-dark">My account</label>
            <div class="mt-5">
                <label class="form-label text-dark">First Name</label>
                <input type="text" asp-for=FirstName class="form-control form-control-solid"/>
            </div>
            <div class="mt-5">
                <label class="form-label text-dark">Last Name</label>
                <input type="text" asp-for=LastName class="form-control form-control-solid"/>
            </div>
            <div class="mt-5">
                <label class="form-label text-dark">Address</label>
                <input type="text" asp-for=Address class="form-control form-control-solid"/>
            </div>
            <div class="mt-5">
                <label class="form-label text-dark">Phone Number</label>
                <input type="text" asp-for=PhoneNumber class="form-control form-control-solid"/>
            </div>
            <div class="mt-5">
                <label class="form-label text-dark">Email</label>
                <input type="text" asp-for=Email class="form-control form-control-solid"/>
            </div>
            <div class="mt-12 mb-8">
                <a class="btn btn-secondary" style="width:100%;" asp-controller="home" asp-action="index">
                    Close
                </a>
            </div>
        </form>
    </div>
</div>
