@using Caravan.Service.ViewModels;
@model UserViewModel

<div class="card w-500px h-630px mt-10 mb-10" style="margin-left:auto; margin-right:auto;">
    <div class="py-10 pe-10 px-10">
        <form asp-controller="users" asp-action="get" asp-route-userId="@ViewBag.userId" method="get">
            <label class="form-label fs-2" style="">My account</label>
            <div class="mt-5">
                <label class="form-label">First Name</label>
                <input type="text" asp-for=FirstName class="form-control form-control-solid" style="backdrop-filter: blur(1px); background-color: rgba(255,255,255,0.13)" />
            </div>
            <div class="mt-5">
                <label class="form-label">Last Name</label>
                <input type="text" asp-for=LastName class="form-control form-control-solid" style="backdrop-filter: blur(1px); background-color: rgba(255,255,255,0.13)" />
            </div>
            <div class="mt-5">
                <label class="form-label">Address</label>
                <input type="text" asp-for=Address class="form-control form-control-solid" style="backdrop-filter: blur(1px); background-color: rgba(255,255,255,0.13)" />
            </div>
            <div class="mt-5">
                <label class="form-label">Phone Number</label>
                <input type="text" asp-for=PhoneNumber class="form-control form-control-solid" placeholder="+998yyxxxxxxx" style="backdrop-filter: blur(1px); background-color: rgba(255,255,255,0.13)" />
            </div>
            <div class="mt-5">
                <label class="form-label">Email</label>
                <input type="text" asp-for=Email class="form-control form-control-solid" placeholder="Example@gmail.com" style="backdrop-filter: blur(1px); background-color: rgba(255,255,255,0.13)" />
            </div>
            <div class="mt-8 mb-10">
                <a class="btn btn-secondary" style="width:100%;" asp-controller="home" asp-action="index">
                    Close
                </a>
            </div>
        </form>
    </div>
</div>
