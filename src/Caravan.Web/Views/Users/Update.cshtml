@using Caravan.Service.Dtos.Users;
@model UserUpdateDto
@{
    Layout = "../Settings/_SettingsLayout.cshtml";
}

<div class="card w-500px h-630px mt-10 mb-15" style="margin-left:auto; margin-right:auto;">
    <div class="py-10 pe-10 px-10">
        <form asp-controller="users" asp-action="update" asp-route-userId="@ViewBag.userId" method="post">
            <label class="form-label fs-2 text-dark">User Update</label>
            <div class="mt-5">
                <label class="required form-label text-dark">First Name</label>
                <input type="text" asp-for=FirstName class="form-control form-control-solid"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mt-5">
                <label class="required form-label text-dark">Last Name</label>
                <input type="text" asp-for=LastName class="form-control form-control-solid"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mt-5">
                <label class="required form-label text-dark">Phone Number</label>
                <input type="text" asp-for=PhoneNumber class="form-control form-control-solid" placeholder="+998yyxxxxxxx"/>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mt-5">
                <label class="required form-label text-dark">Address</label>
                <input type="text" asp-for=Address class="form-control form-control-solid"/>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="mt-5">
                <label class="required form-label text-dark">Image</label>
                <input type="file" asp-for=Image class="form-control form-control-solid" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="mt-8">
                <input type="submit" class="btn btn-primary rounded hover-scale" style="width:100%;" value="UPDATE" />
            </div>
            <div class="mt-8 mb-10">
                <a class="btn btn-secondary" style="width:100%;" asp-controller="home" asp-action="index">
                    CLOSE
                </a>
            </div>
        </form>
    </div>
</div>
