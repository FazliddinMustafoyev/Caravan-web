@using Caravan.Service.Dtos.Accounts;
@model PasswordUpdateDto
@{
    Layout = "../Settings/_SettingsLayout.cshtml";
}

<div class="card w-500px h-630px mt-10 mb-15" style="margin-left:auto; margin-right:auto;">
    <div class="py-10 pe-10 px-10">
        <form asp-controller="users" asp-action="UpdatePassword" method="post">
            <label class="form-label fs-2 font-monospace text-gray-900">Change Password</label>
            <div class="mt-5">
                <label class="required form-label text-gray-900 font-monospace">Old Password</label>
                <input type="password" asp-for=OldPassword class="form-control form-control-solid" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="mt-5">
                <label class="required form-label text-gray-900 font-monospace">New Password</label>
                <input type="password" asp-for=NewPassword class="form-control form-control-solid" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="mt-5">
                <label class="required form-label text-gray-900 font-monospace">Verify Password</label>
                <input type="password" asp-for=VerifyPassword class="form-control form-control-solid" />
                <span asp-validation-for="VerifyPassword" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label class="required form-label text-gray-900 font-monospace">
                    Forget <a asp-controller="users" asp-action="SendEmail">password</a>?
                </label>
            </div>
            <div class="row-cols-2 mt-8">
                <input type="submit" class="btn btn-primary rounded hover-scale" style="width:100%;" value="SUBMIT" />
            </div>
            <div class="row-cols-2 mt-6 mb-8">
                <a class="btn btn-secondary" style="width:100%;" asp-controller="home" asp-action="index">
                    CLOSE
                </a>
            </div>
        </form>
    </div>
</div>