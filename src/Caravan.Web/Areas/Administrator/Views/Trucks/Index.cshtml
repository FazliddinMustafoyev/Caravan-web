@using Caravan.Service.ViewModels;
@model IEnumerable<TruckViewModel>
<table class="table table-row-dashed table-row-gray-300 gy-7">
    <thead>
        <tr class="fw-bolder fs-6 text-gray-800">
            <th>id</th>
            <th>Name</th>
            <th>Description</th>
            <th>City</th>
            <th>Status</th>
            <th>Location</th>
            <th>Owner id</th>
            <th>Owner</th>
        </tr>
    </thead>
    @{
        foreach (var order in Model)
        {
            <tbody>
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Name</td>
                    <td>@order.Description</td>
                    <td>@order.LocationName</td>
                    <td>@order.IsEmpty</td>
                    <td>@order.TruckLocation.Longitude    , @order.TruckLocation.Latitude</td>
                    <td>@order.User.Id </td>
                    <td>@order.User.FirstName </td>
                    <td><a asp-controller="Trucks" asp-action="Update"  asp-route-truckid="@order.Id"class=" btn btn-primary">Edit</a></td>
                    <td><a asp-controller="Trucks" asp-action="Delete" asp-route-truckid="@order.Id"class="btn btn-danger">Delete</a></td>
                </tr>

            </tbody>
        }
    }

</table>